$bg-color=#f06060;
$font-default-color=#fff;


body
	background-color $bg-color
	color $font-default-color
	font 12px/1.5 "微软雅黑"
	.game-wrap
		.hide
			display none
		/*.page
			position absolute
			top 0
			left 0
			bottom 0*/
		#loading
			text-align center
			font-size 30px
			.loading-txt
				position absolute
				top 0
				left 0
				right 0
				bottom 60px
				height 100px
				width 100%
				margin auto
		#index
			h1
				padding 30px 0
				font-size 30px
				text-align center
				text-shadow 1px 1px 1px #ab3c3c3
			.intro
				font-size 18px
				text-align center
				opacity 0.6
			.btns
				position absolute
				bottom 10px
				height 210px
				text-align center
				width 100%
				color $font-default-color



